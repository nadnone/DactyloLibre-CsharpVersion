<Window x:Class="DactyloLibre.Stats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DactyloLibre"
        mc:Ignorable="d"
        Title="Stats" Height="450" Width="800" Background="#FF24252A" Loaded="Loadedpage">
    <Grid>
        <DataGrid x:Name="statsDataGrid" Background="#FF242424" AutoGenerateColumns="False" AlternatingRowBackground="#385E0F" RowBackground="#61B329" Foreground="Black" FontFamily="Calibri" FontSize="18">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="NamesHeader"  Binding="{Binding Noms}" Width="25*"/>
                <DataGridTextColumn x:Name="speedsHeader" Binding="{Binding Vitesse}" Width="25*"/>
                <DataGridTextColumn x:Name="scoresHeader" Binding="{Binding Scores}" Width="25*"/>
                <DataGridTextColumn x:Name="faultsHeader" Binding="{Binding Fautes}" Width="25*"/>
                <DataGridTextColumn x:Name="timesHeader"  Binding="{Binding Temps}" Width="25*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
